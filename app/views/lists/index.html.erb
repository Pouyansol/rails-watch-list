<nav class="navbar navbar-expand-lg navbar-light bg-light">
  <a class="navbar-brand" href="#">My Watch List App</a>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>
  <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
    <ul class="navbar-nav">
      <li class="nav-item">
        <%= link_to 'New List', new_list_path, class: 'nav-link btn btn-primary' %>
      </li>
    </ul>
  </div>
</nav>

<div class="banner">
  <h1>All Lists</h1>
</div>

<div class="row">
  <% @lists.each do |list| %>
    <div class="col-md-4">
      <div class="card">
        <% if list.image.attached? %>
          <%= image_tag list.image, class: 'card-img-top' %>
        <% else %>
          <%= image_tag "drama.jpg", class: 'card-img-top' %>
        <% end %>
        <div class="card-body">
          <h5 class="card-title">
            <%= link_to list.name, list %>
          </h5>
        </div>
      </div>
    </div>
  <% end %>
</div>
