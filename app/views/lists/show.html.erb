<h1><%= @list.name %></h1>

<div class="row">
  <% @list.bookmarks.each do |bookmark| %>
    <div class="col-md-4">
      <div class="card">
        <%= image_tag bookmark.movie.poster_url, class: 'card-img-top' %>
        <div class="card-body">
          <h5 class="card-title"><%= bookmark.movie.title %></h5>
          <%= button_to 'Delete', bookmark_path(bookmark), method: :delete, class: 'btn btn-danger' %>
        </div>
      </div>
    </div>
  <% end %>
</div>
